<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/welcome</item>
    </style>

    <style name="myHeadLayout">
        <item name="android:layout_width">@dimen/dp_822</item>
        <item name="android:layout_height">@dimen/dp_80</item>
        <item name="android:layout_marginTop">@dimen/dp_25</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="myBodyLayout">
        <item name="android:layout_width">@dimen/dp_822</item>
        <item name="android:layout_height">@dimen/dp_394</item>
        <item name="android:layout_marginTop">@dimen/dp_17</item>
        <item name="android:orientation">horizontal</item>
    </style>

