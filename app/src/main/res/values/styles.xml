<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="alertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="mProgress_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal
        </item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/new_colorAccent</item>
        <item name="colorPrimaryDark">@color/new_colorAccent</item>
        <item name="colorAccent">@color/new_colorAccent</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/new_colorAccent</item>
        <item name="colorPrimaryDark">@color/new_colorAccent</item>
        <item name="colorAccent">@color/new_colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ic_guider_launch_empty</item>
    </style>

    <style name="divider_line_blank">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFD700</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_divider_line</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginRight">13dp</item>
    </style>

    <style name="action_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="action_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_action_bar_button</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="action_llyt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
    </style>

    <style name="Transparent.holo" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--<item name="colorPrimary">@color/new_colorAccent</item>-->
    <!--<item name="colorPrimaryDark">@color/new_colorAccent</item>-->
    <!--<item name="colorAccent">@color/new_colorAccent</item>-->

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <!-- Base application theme. -->
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorPrimary">@color/new_colorAccent2</item>
        <item name="colorAccent">@color/new_colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#33000000
        </item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="MyEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/new_colorAccent</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="MyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyBlackTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="match_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <!-- 加载的loading -->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.picker" parent="android:Theme.Holo.NoActionBar">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
        <item name="android:numbersSelectorColor" tools:targetApi="lollipop">
            @color/new_colorAccent2
        </item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>
    <!-- B30设备页面字体样式-->
    <style name="B30DeviceStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1C1C1C</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--布局样式 -->
    <style name="B30DeviceRelStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--Toggle的样式-->
    <style name="B30MsgToggleStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:background">@drawable/toggle_select</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="B30ToggTxtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_15</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/size_5</item>
        <item name="android:textColor">#1C1C1C</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>


    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>


    <!--血氧相关样式-->
    <!--块内容样式-->
    <style name="style_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--块内容中头部的标题样式，标题中包含(最左边的文本以及最右边的图片)-->
    <style name="style_block_toptitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--块内容中头部标题最左边的文本样式-->
    <style name="style_block_toptitle_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--块内容中头部标题中最右边的图片样式-->
    <style name="style_block_toptitle_img">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/vpspo2h_list_img</item>
    </style>

    <!--块内容中底部左侧状态样式，对应(轻度，安静....)-->
    <style name="style_block_bottom_state_left">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
    </style>
    <!--块内容中底部中间状态样式，对应(正常，多动....)-->
    <style name="style_block_bottom_state_middle" parent="style_block_bottom_state_left">
        <item name="android:gravity">center</item>
    </style>

    <!--块内容中底部右侧状态样式，对应(异常，躁动....)-->
    <style name="style_block_bottom_state_right" parent="style_block_bottom_state_left">
        <item name="android:gravity">right</item>
    </style>
    <!--块内容中底部状态样式中圆点样式-->
    <style name="style_block_bottom_state_dot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">●</item>
    </style>
    <!--块内容中底部状态样式中文本样式，对应（轻度，安静，正常，多动，异常，躁动...）-->
    <style name="style_block_bottom_state_tv" parent="style_block_bottom_state_dot">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--块内容中底部的Tip样式，对应（[0-20]轻度 ....）-->
    <style name="style_block_bottom_tip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/vpspo2h_block_tip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <!--睡眠星星的style-->
    <style name="CusSleepRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <!--修改默认图片-->
        <item name="android:progressDrawable">@drawable/sleepbar</item>
        <!--修改默认大小-->
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:defaultValue">0</item>

    </style>

    <!--睡眠星星的style-->
    <style name="CusHRVRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <!--修改默认图片-->
        <item name="android:progressDrawable">@drawable/ic_hrv_desc</item>
        <!--修改默认大小-->
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">50dp</item>

    </style>

    <style name="B31STvStyle">

        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>

        <item name="android:textSize">12sp</item>

    </style>


    <style name="B31STvDescStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#141828</item>
    </style>
</resources>
