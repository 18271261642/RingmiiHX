<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ecg_back_box"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_height="@dimen/dp_180">


   <TextView
       android:id="@+id/itemEcgRecordTimeTv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="17sp"
       android:layout_marginLeft="@dimen/dimen_10"
       android:padding="5dp"
       android:text="测量时间 12:14"/>


    <LinearLayout
        android:id="@+id/homeEcgResultLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:text="心率"/>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:text="QT间期"/>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="HRV"/>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemEcgRecordHeartTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="--"/>


            <TextView
                android:id="@+id/itemEcgRecordQtTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="--毫秒"/>


            <TextView
                android:id="@+id/itemEcgRecordHrvTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:text="--毫秒"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>