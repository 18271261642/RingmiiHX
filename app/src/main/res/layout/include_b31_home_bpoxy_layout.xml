<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/homeSpo2LinChartView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size__15">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/size_5"
            android:gravity="center"
            android:text="@string/string_today_sleep_Spo_bloop"
            android:textColor="#6074BF"
            android:textSize="17sp"
            tools:ignore="RtlHardcoded" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/size_5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_35"
                android:background="@drawable/fgm_home_spo2h" />


            <TextView
                android:id="@+id/b31Spo2AveTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_10"
                android:gravity="center"
                android:text="@string/ave_value"
                android:textColor="#6074BF" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/b31BpOxyLin"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


</FrameLayout>