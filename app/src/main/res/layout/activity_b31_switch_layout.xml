<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways">

            <include layout="@layout/comment_b30_title_layout" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </com.google.android.material.appbar.AppBarLayout>



    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/checkWearRelLayout"
                style="@style/B30DeviceRelStyle">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/connect_success_checkwear" />


                <TextView
                    style="@style/B30DeviceStyle"
                    android:layout_toRightOf="@+id/img1"
                    android:text="@string/string_wearing_test" />


                <ToggleButton
                    android:id="@+id/b31CheckWearToggleBtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_select"
                    android:textOff="@null"
                    android:textOn="@null" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/chang_white" />

            <RelativeLayout style="@style/B30DeviceRelStyle">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pwsetting_fiveheart" />


                <TextView
                    style="@style/B30DeviceStyle"
                    android:singleLine="false"
                    android:maxEms="11"
                    android:layout_toRightOf="@+id/img2"
                    android:text="@string/string_auto_blood_pressure" />


                <ToggleButton
                    android:id="@+id/b31AutoHeartToggleBtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_select"
                    android:textOff="@null"
                    android:textOn="@null" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/chang_white" />

            <RelativeLayout
                android:id="@+id/rel_xueya"
                style="@style/B30DeviceRelStyle">

                <ImageView
                    android:id="@+id/imgss"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/connect_success_bp" />


                <TextView
                    style="@style/B30DeviceStyle"
                    android:singleLine="false"
                    android:maxEms="11"
                    android:layout_toRightOf="@+id/imgss"
                    android:text="@string/string_auto_heart" />


                <ToggleButton
                    android:id="@+id/b30AutoBloadToggleBtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_select"
                    android:textOff="@null"
                    android:textOn="@null" />


            </RelativeLayout>







            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/chang_white" />


            <RelativeLayout
                android:id="@+id/spo2SwitchRely"
                style="@style/B30DeviceRelStyle">

                <ImageView
                    android:id="@+id/img15"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pwsetting_spo2hauto" />


                <TextView
                    style="@style/B30DeviceStyle"
                    android:layout_toRightOf="@+id/img15"
                    android:singleLine="false"
                    android:maxEms="10"
                    android:text="血氧夜间检测" />


                <ToggleButton
                    android:id="@+id/b31AutoBPOxyToggbleBtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_select"
                    android:textOff="@null"
                    android:textOn="@null" />


            </RelativeLayout>



            <View
                android:id="@+id/view_miaobiao"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/chang_white" />


            <RelativeLayout
                android:id="@+id/rel_miaobiao"
                style="@style/B30DeviceRelStyle">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pwsetting_stopwatch" />


                <TextView
                    style="@style/B30DeviceStyle"
                    android:layout_toRightOf="@+id/img5"
                    android:text="@string/string_stopwatch_function" />


                <ToggleButton
                    android:id="@+id/b31SecondToggleBtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_select"
                    android:textOff="@null"
                    android:textOn="@null" />


            </RelativeLayout>


            <View
                android:id="@+id/view_findePhone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/chang_white" />

            <RelativeLayout
                android:id="@+id/rel_findePhone"
                style="@style/B30DeviceRelStyle">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pwsetting_findphoneui" />
                <!--android:background="@drawable/pwsetting_findphonebywatch"-->


                <TextView
                    style="@style/B30DeviceStyle"
                    android:layout_toRightOf="@+id/img4"
                    android:text="@string/string_find_phone" />


                <ToggleButton
                    android:id="@+id/b30SwitchFindPhoneToggleBtn"
                    android:layout_width="70dp"
                    android:background="@drawable/toggle_select"
                    android:textOn="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textOff="@null"
                    android:layout_height="40dp" />




            </RelativeLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/chang_white" />

            <RelativeLayout
                android:id="@+id/deviceDisconnAlertRel"
                style="@style/B30DeviceRelStyle">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pwsetting_disconnect_remind" />


                <TextView
                    style="@style/B30DeviceStyle"
                    android:layout_toRightOf="@+id/img6"
                    android:text="@string/string_disconnection_reminder" />


                <ToggleButton
                    android:id="@+id/b31SwitchDisAlertTogg"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_select"
                    android:textOff="@null"
                    android:textOn="@null" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/chang_white" />


            <RelativeLayout
                android:id="@+id/time_type"
                style="@style/B30DeviceRelStyle">

                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pwsetting_hour24" />
                <!--android:background="@drawable/ic_shijian_zhi"-->


                <TextView
                    style="@style/B30DeviceStyle"
                    android:layout_toRightOf="@+id/img7"
                    android:text="@string/string_is_24_hour" />


                <ToggleButton
                    android:id="@+id/b30SwitchTimeTypeTogg"
                    android:layout_width="70dp"
                    android:background="@drawable/toggle_select"
                    android:textOn="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textOff="@null"
                    android:layout_height="40dp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/chang_white" />

            <RelativeLayout
                android:id="@+id/help_sos"
                style="@style/B30DeviceRelStyle">

                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pwsetting_oversport" />


                <TextView
                    style="@style/B30DeviceStyle"
                    android:layout_toRightOf="@+id/img8"
                    android:text="SOS" />


                <ToggleButton
                    android:id="@+id/b30SwitchHlepSos"
                    android:layout_width="70dp"
                    android:background="@drawable/toggle_select"
                    android:textOn="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textOff="@null"
                    android:layout_height="40dp" />



                <ImageView
                    android:id="@+id/ig1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/fgm_fitness_arrow_left" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/chang_white" />


            <RelativeLayout
                android:id="@+id/b31sScienceRel"
                android:visibility="gone"
                style="@style/B30DeviceRelStyle">

                <ImageView
                    android:id="@+id/img32"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pwsetting_fiveheart" />


                <TextView
                    style="@style/B30DeviceStyle"
                    android:singleLine="false"
                    android:maxEms="11"
                    android:layout_toRightOf="@+id/img32"
                    android:text="科学睡眠" />


                <ToggleButton
                    android:id="@+id/b31ScienceToggleBtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_select"
                    android:textOff="@null"
                    android:textOn="@null" />


            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>