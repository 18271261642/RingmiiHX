<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <include
        android:id="@+id/headTitle"
        layout="@layout/b18i_titil_bar_white"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/latestMeasureResultLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_185"
                android:background="@drawable/bg_health_measure_result"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/latest_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="@string/latest_health_result"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/latest_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:textColor="@color/white"
                        android:textSize="65sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/latest_value_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:text="mmlo/L"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15"
                        app:layout_constraintBaseline_toBaselineOf="@id/latest_value"
                        app:layout_constraintStart_toEndOf="@id/latest_value" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/lineTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="@string/trend_analysis"
                android:textColor="#171717"
                android:textSize="@dimen/sp_17"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/latestMeasureResultLayout" />


            <androidx.cardview.widget.CardView
                android:id="@+id/measureLineChartLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_13"
                app:cardCornerRadius="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@id/lineTitleTv">

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/measureLineChart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_163"
                    android:background="@color/white"
                    android:padding="@dimen/dp_10" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/listTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="@string/record_history"
                android:textColor="#171717"
                android:textSize="@dimen/sp_17"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/measureLineChartLayout" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/line"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/listTitleTv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listTitleRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_11"
                android:paddingEnd="@dimen/dp_11"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/timeSelectLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/listTitleRv">

                <TextView
                    android:id="@+id/startTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ededed_round_11"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="#7d7d7d"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/timeLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_1"
                    android:text="-"
                    android:textColor="#7d7d7d"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/startTimeTv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/endTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_1"
                    android:background="@drawable/bg_ededed_round_11"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="#7d7d7d"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toEndOf="@id/timeLine"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:id="@+id/noDataLayout"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/timeSelectLayout">

                <ImageView
                    android:id="@+id/noResultIv"
                    android:layout_width="@dimen/dp_39"
                    android:layout_height="@dimen/dp_47"
                    android:src="@drawable/ic_measure_result_no"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/noDataTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_11"
                    android:text="暂无数据"
                    android:textColor="#ededed"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/noResultIv" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/result_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_20"
                app:layout_constraintTop_toBottomOf="@id/timeSelectLayout" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/startMeasure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_f18937_round_21"
        android:gravity="center"
        android:text="@string/app_start_test"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>