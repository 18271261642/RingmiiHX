<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/phoneEditLayout"
        layout="@layout/include_phone_edit_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/passwordIv"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_17"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_14"
        android:src="@drawable/icon_login_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneEditLayout" />

    <EditText
        android:id="@+id/lineCodeEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:gravity="start"
        android:hint="@string/app_line_code_hint"
        android:inputType="number"
        android:minHeight="@dimen/dp_30"
        android:paddingStart="@dimen/dp_11"
        android:paddingEnd="0dp"
        android:singleLine="true"
        android:textColor="@color/color333333"
        android:textColorHint="@color/color999999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintEnd_toStartOf="@id/sendCodeTv"
        app:layout_constraintStart_toEndOf="@id/passwordIv"
        app:layout_constraintTop_toTopOf="@id/passwordIv" />

    <TextView
        android:id="@+id/sendCodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_28"
        android:background="@drawable/rounded_ddddd_14_bg"
        android:gravity="center"
        android:paddingStart="@dimen/dp_14"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_5"
        android:text="@string/app_send_verify_code"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneEditLayout" />

    <View
        android:id="@+id/passwordLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_26"
        android:background="@color/colorEEEEEE"
        app:layout_constraintTop_toBottomOf="@id/passwordIv" />

    <TextView
        android:id="@+id/nextStep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_41"
        android:layout_marginEnd="@dimen/dp_27"
        android:background="@drawable/rounded_ddddd_22_bg"
        android:gravity="center"
        android:text="@string/app_next_step"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/passwordLine" />

</androidx.constraintlayout.widget.ConstraintLayout>