<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/rootLayout"
        />
    <ImageView
        android:layout_width="313dp"
        android:layout_height="341dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_guide1"
        android:id="@+id/guide1"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="231dp"
        android:layout_height="322dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_guide2"
        android:id="@+id/guide2"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="193dp"
        android:layout_height="311dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_guide3"
        android:id="@+id/guide3"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_93"
        android:id="@+id/contentTv"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_13"
        android:text="@string/app_guide_page1_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:id="@+id/titleTv"
        app:layout_constraintBottom_toTopOf="@id/contentTv"
        android:layout_marginBottom="@dimen/dp_5"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_27"
        android:text="@string/app_guide_page1_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_33"
        android:paddingEnd="@dimen/dp_33"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_27"
        android:background="@drawable/bg_round_home_msg_22"
        android:text="@string/app_start_to_experience"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:id="@+id/entryApp"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>