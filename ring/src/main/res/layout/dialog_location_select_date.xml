<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:background="@drawable/rounded_white_19_top_bg">

        <TextView
            android:id="@+id/selectDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_18"
            android:text="@string/app_select_date"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.guider.baselib.widget.calendarList.CalendarList
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/calendarListView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectDateTitle"
            />
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/icon_location_date_close"
            android:id="@+id/cancelIv"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>