<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include
        android:id="@+id/includePasswordLayout"
        layout="@layout/include_password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nextStep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginEnd="@dimen/dp_27"
        android:background="@drawable/rounded_ddddd_22_bg"
        android:gravity="center"
        android:text="@string/app_next_step"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/includePasswordLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>