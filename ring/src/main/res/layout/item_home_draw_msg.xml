<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_84"
    android:id="@+id/rootLayout"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headLayout"
        android:layout_width="@dimen/dp_54"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@+id/searchPersonBgView"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:background="@drawable/circle_f18937_oval_bg"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/distanceView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <com.guider.baselib.widget.CircleImageView
            android:id="@+id/msgHeadIv"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:src="@drawable/icon_default_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/distanceView" />

        <TextView
            android:id="@+id/searchPersonFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_44"
            android:background="@drawable/rounded_f18937_8_bg"
            android:gravity="center"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_1"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_1"
            android:text="寻人模式"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/msgSelectIv"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginStart="11dp"
            android:src="@drawable/ic_home_draw_msg_select"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/headLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/msgPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/msgPersonNameIv"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:layout_marginStart="@dimen/dp_6"
            android:src="@drawable/icon_device_account_name_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/msgPersonName"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/deviceCodeTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:singleLine="true"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/msgRingStatusIv"
        app:layout_constraintTop_toBottomOf="@id/nameLayout" />

    <ImageView
        android:id="@+id/msgRingStatusIv"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="@dimen/dp_12"
        android:src="@drawable/oval_green_59d15f"
        app:layout_constraintStart_toStartOf="@id/nameLayout"
        app:layout_constraintTop_toBottomOf="@id/deviceCodeTv" />

    <TextView
        android:id="@+id/msgRingStatusTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/app_main_left_msg_device_status_online"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/msgRingStatusIv"
        app:layout_constraintStart_toEndOf="@id/msgRingStatusIv"
        app:layout_constraintTop_toTopOf="@id/msgRingStatusIv" />

    <com.guider.baselib.widget.BatteryView
        android:id="@+id/batteryLayout"
        android:layout_width="@dimen/dp_21"
        android:layout_height="@dimen/dp_11"
        android:layout_marginEnd="@dimen/dp_15"
        android:visibility="gone"
        app:batteryColor="@color/color59d15f"
        app:batteryOrientation="horizontal"
        app:batteryPower="70"
        app:layout_constraintBottom_toBottomOf="@id/msgRingStatusIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/msgRingStatusIv" />

    <ImageView
        android:id="@+id/rssiIv"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_11"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/batteryLayout"
        app:layout_constraintEnd_toStartOf="@id/batteryLayout"
        app:layout_constraintTop_toTopOf="@id/batteryLayout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2"
        android:background="@color/line_grey"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>