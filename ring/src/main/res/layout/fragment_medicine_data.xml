<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refreshLayout"
    >

    <com.scwang.smart.refresh.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:overScrollMode="never"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dataLatestLayout"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:background="@drawable/icon_medicine_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/dataTagTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_70"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_23"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dataValueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_no_data"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_23"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dataTagTv" />

                <TextView
                    android:id="@+id/dataUnitTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dataValueTv" />

                <TextView
                    android:id="@+id/measureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dataUnitTv" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_18"
                android:background="@drawable/circle_f28a38_14_bg"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="@string/app_main_medicine_manual_measuring"
                android:textColor="@color/colorF28A38"
                android:textSize="@dimen/sp_13"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dataLatestLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chartLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="@dimen/dp_21"
                android:layout_marginEnd="14dp"
                android:background="@drawable/rounded_f6f6f6_7_bg"
                app:layout_constraintTop_toBottomOf="@id/measure">

                <ImageView
                    android:id="@+id/chartTitleIv"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_medicine_trend"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/chartTitleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/chartTitleIv"
                    app:layout_constraintStart_toEndOf="@id/chartTitleIv"
                    app:layout_constraintTop_toTopOf="@id/chartTitleIv" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tempBottomStatusLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dataChart">

                    <ImageView
                        android:id="@+id/tempSmallIv"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@drawable/oval_red_e2402b"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tempSmallTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/app_main_medicine_high_side"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="@id/tempSmallIv"
                        app:layout_constraintStart_toEndOf="@id/tempSmallIv"
                        app:layout_constraintTop_toTopOf="@id/tempSmallIv" />

                    <ImageView
                        android:id="@+id/tempNormalIv"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/oval_green_59d15f"
                        app:layout_constraintStart_toEndOf="@id/tempSmallTv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tempNormalTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/app_main_health_normal"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="@id/tempNormalIv"
                        app:layout_constraintStart_toEndOf="@id/tempNormalIv"
                        app:layout_constraintTop_toTopOf="@id/tempNormalIv" />

                    <ImageView
                        android:id="@+id/tempErrorIv"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/oval_orange_f18937"
                        app:layout_constraintStart_toEndOf="@id/tempNormalTv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tempErrorTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/app_main_medicine_low_side"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="@id/tempErrorIv"
                        app:layout_constraintStart_toEndOf="@id/tempErrorIv"
                        app:layout_constraintTop_toTopOf="@id/tempErrorIv" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/dataChartUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_8"
                    app:layout_constraintStart_toStartOf="@id/chartTitleIv"
                    app:layout_constraintTop_toBottomOf="@id/chartTitleIv" />

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/dataChart"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/dataChartUnit" />

                <TextView
                    android:id="@+id/noDataTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_no_data"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/suggestLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginEnd="14dp"
                android:background="@drawable/circle_eeeeee_7_bg"
                android:paddingStart="14dp"
                android:paddingEnd="0dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/chartLayout">

                <ImageView
                    android:id="@+id/suggestIv"
                    android:layout_width="11dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/dp_12"
                    android:src="@drawable/icon_medicine_suggest"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/suggestTitleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/suggestIv"
                    app:layout_constraintStart_toEndOf="@id/suggestIv"
                    app:layout_constraintTop_toTopOf="@id/suggestIv" />

                <TextView
                    android:id="@+id/suggestContentTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginEnd="9dp"
                    android:text="@string/app_no_suggest"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/suggestIv"
                    app:layout_constraintTop_toBottomOf="@id/suggestIv" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/icon_arrow_right"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/answerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@drawable/circle_eeeeee_7_bg"
                app:layout_constraintTop_toBottomOf="@id/suggestLayout">

                <ImageView
                    android:id="@+id/answerIv"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:src="@drawable/icon_medicine_answer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="@string/app_main_medicine_doctors_consultation"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/answerIv"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/icon_arrow_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                app:layout_constraintTop_toBottomOf="@id/answerLayout" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</com.scwang.smart.refresh.layout.SmartRefreshLayout>