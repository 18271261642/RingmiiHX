<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/editLayout"
        layout="@layout/include_phone_edit_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/includePasswordLayout"
        layout="@layout/include_password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editLayout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_14"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_3"
        app:layout_constraintTop_toBottomOf="@id/includePasswordLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:text="@string/app_person_info_header"
                android:textColor="@color/color999999"
                android:textSize="@dimen/sp_13"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/headerEnterIv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/icon_arrow_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.guider.baselib.widget.CircleImageView
                android:id="@+id/headerIv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/headerEnterIv"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/simpleInclude"
        layout="@layout/include_simple_complete_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout" />

    <TextView
        android:id="@+id/bindTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_25"
        android:background="@drawable/rounded_ffe29d_22_bg"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_11"
        android:text="@string/app_immediately_binding"
        android:textColor="@color/color8F5725"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simpleInclude" />
</androidx.constraintlayout.widget.ConstraintLayout>