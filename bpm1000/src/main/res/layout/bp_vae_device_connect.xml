<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_all"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/device_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_80"
            android:layout_marginEnd="@dimen/dp_80"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/logon_guider" />

                <com.guider.health.bp.view.TipTitleView
                    android:id="@+id/tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/glu_connect_icon"
                    android:layout_width="@dimen/dp_194"
                    android:layout_height="@dimen/dp_194"
                    android:layout_marginLeft="@dimen/dp_79"
                    android:background="@mipmap/icon_ble" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_53"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/operation_guide"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp_19" />

                    <TextView
                        android:id="@+id/glu_operat_reminders"
                        android:layout_width="@dimen/dp_280"
                        android:layout_height="@dimen/dp_121"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="@string/waiting_for_measurement"
                        android:textColor="#171717"
                        android:textSize="@dimen/sp_21" />

                    <Button
                        android:id="@+id/glu_button_failed"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_44"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_marginStart="@dimen/dp_100"
                        android:background="@drawable/button_cancel"
                        android:paddingLeft="@dimen/dp_30"
                        android:paddingRight="@dimen/dp_30"
                        android:text="@string/reconnect"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_19"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>


