<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_all"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/device_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_80"
            android:layout_marginEnd="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/logon_guider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/arm_cylinder_sphygmomanometer"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/operation_guide"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/celiangcaozuo"
                    android:textColor="#F18937"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/celiangjieguo"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_58"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/bp_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_45"
                        android:text="@string/celiangzhong"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp_28" />


                    <Button
                        android:id="@+id/bp_cancel"
                        android:layout_width="@dimen/dp_229"
                        android:layout_height="@dimen/dp_44"
                        android:layout_marginTop="@dimen/dp_30"
                        android:background="@drawable/button_cancel"
                        android:text="@string/quxiao"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_19"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/bp_re"
                        android:layout_width="@dimen/dp_229"
                        android:layout_height="@dimen/dp_44"
                        android:layout_marginTop="@dimen/dp_30"
                        android:background="@drawable/button_cancel"
                        android:text="@string/lianjieshibai_chongxin"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_19"
                        android:visibility="invisible" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>