<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/background_all"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/device_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_80"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/logon_guider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/xueya"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/celiangcaozuo"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/caozuotixing"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/shebeiceliang"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/celiangjieguo"
                    android:textColor="#F18937"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="@dimen/dp_214"
                        android:layout_height="@dimen/dp_166"
                        android:background="@drawable/text_box"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bp_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="120/120"
                            android:textColor="#7D7D7D"
                            android:textSize="@dimen/sp_38" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:text="mmHg"
                            android:textColor="#7D7D7D"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sp_38"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/celiangjieguo"
                            android:textColor="#7D7D7D"
                            android:textSize="@dimen/sp_15" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_13">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sbp"
                                android:textColor="#171717"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/bp_press1"
                                android:layout_width="@dimen/dp_109"
                                android:layout_height="@dimen/dp_29"
                                android:layout_marginLeft="@dimen/dp_6"
                                android:background="@drawable/text_box"
                                android:gravity="center"
                                android:textColor="#171717"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/bp_heart1"
                                    android:layout_width="@dimen/dp_11"
                                    android:layout_height="@dimen/dp_10"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/dp_3"
                                    android:background="@mipmap/heart"
                                    android:visibility="invisible" />

                                <TextView
                                    android:layout_width="@dimen/dp_70"
                                    android:layout_height="@dimen/dp_20"
                                    android:background="#F6CC7B"
                                    android:gravity="center"
                                    android:text="低压"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/sp_12" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/bp_heart2"
                                    android:layout_width="@dimen/dp_11"
                                    android:layout_height="@dimen/dp_10"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/dp_3"
                                    android:background="@mipmap/heart"
                                    android:visibility="invisible" />

                                <TextView
                                    android:layout_width="@dimen/dp_70"
                                    android:layout_height="@dimen/dp_20"
                                    android:background="#7ABC5B"
                                    android:gravity="center"
                                    android:text="正常"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/sp_12" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/bp_heart3"
                                    android:layout_width="@dimen/dp_11"
                                    android:layout_height="@dimen/dp_10"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/dp_3"
                                    android:background="@mipmap/heart"
                                    android:visibility="invisible" />

                                <TextView
                                    android:layout_width="@dimen/dp_70"
                                    android:layout_height="@dimen/dp_20"
                                    android:background="#F35D57"
                                    android:gravity="center"
                                    android:text="高压"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/sp_12" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_14">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dbp"
                                android:textColor="#171717"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/bp_press2"
                                android:layout_width="@dimen/dp_109"
                                android:layout_height="@dimen/dp_29"
                                android:layout_marginLeft="@dimen/dp_6"
                                android:background="@drawable/text_box"
                                android:gravity="center"
                                android:textColor="#171717"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/bp_heart4"
                                    android:layout_width="@dimen/dp_11"
                                    android:layout_height="@dimen/dp_10"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/dp_3"
                                    android:background="@mipmap/heart"
                                    android:visibility="invisible" />

                                <TextView
                                    android:layout_width="@dimen/dp_70"
                                    android:layout_height="@dimen/dp_20"
                                    android:background="#F6CC7B"
                                    android:gravity="center"
                                    android:text="低压"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/sp_12" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/bp_heart5"
                                    android:layout_width="@dimen/dp_11"
                                    android:layout_height="@dimen/dp_10"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/dp_3"
                                    android:background="@mipmap/heart"
                                    android:visibility="invisible" />

                                <TextView
                                    android:layout_width="@dimen/dp_100"
                                    android:layout_height="@dimen/dp_20"
                                    android:background="#7ABC5B"
                                    android:gravity="center"
                                    android:text="@string/zhengchang"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/sp_12" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/bp_heart6"
                                    android:layout_width="@dimen/dp_11"
                                    android:layout_height="@dimen/dp_10"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/dp_3"
                                    android:background="@mipmap/heart"
                                    android:visibility="invisible" />

                                <TextView
                                    android:layout_width="@dimen/dp_100"
                                    android:layout_height="@dimen/dp_20"
                                    android:background="#F35D57"
                                    android:gravity="center"
                                    android:text="@string/yichang"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/sp_12" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/operat_reminders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/dp_30"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/xueyashuoming"
                        android:textColor="#ACACAC"
                        android:textSize="@dimen/sp_15" />


                    <Button
                        android:id="@+id/bp_result_next"
                        android:layout_width="@dimen/dp_134"
                        android:layout_height="@dimen/dp_44"
                        android:layout_gravity="right|bottom|end"
                        app:layout_constraintStart_toEndOf="@id/operat_reminders"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/button_cancel"
                        android:text="@string/xiayibu"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/dp_19"
                        android:visibility="visible" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>


