<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_all"
    android:orientation="vertical">

    <include layout="@layout/head" />

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/myBodyLayout"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/m1000"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@mipmap/m500"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/navigation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@id/m1000"
            app:layout_constraintLeft_toRightOf="@id/m1000"
            app:layout_constraintTop_toTopOf="@+id/m1000" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_214"
            android:layout_height="@dimen/dp_166"
            android:layout_marginLeft="@dimen/dp_161"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/text_box"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/m1000" />

        <TextView
            android:id="@+id/shifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_31"
            android:text="@string/wwk_hr"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/sp_19"
            app:layout_constraintLeft_toLeftOf="@id/image"
            app:layout_constraintRight_toRightOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/image" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:text="77"
            android:textColor="#171717"
            android:textSize="@dimen/dp_88"
            app:layout_constraintLeft_toLeftOf="@id/image"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintRight_toRightOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/shifen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:text="@string/wwk_times"
            android:textColor="#171717"
            android:textSize="@dimen/sp_19"
            app:layout_constraintBaseline_toBaselineOf="@+id/result"
            app:layout_constraintLeft_toRightOf="@+id/result"
            app:layout_constraintTop_toTopOf="@id/shifen" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="image" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_104"
            android:text="@string/wwk_result_tips_"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/sp_19"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintTop_toTopOf="@id/image" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_12"
            android:scrollbars="none"
            app:layout_constraintLeft_toLeftOf="@id/text1"
            app:layout_constraintRight_toRightOf="@id/text1"
            app:layout_constraintBottom_toTopOf="@id/text3"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintTop_toBottomOf="@id/text2">

            <TextView
                android:id="@+id/reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#F18937"
                android:textSize="@dimen/sp_17" />

        </ScrollView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_122"
            android:layout_marginTop="@dimen/dp_14"
            android:text="@string/wwk_ecg_image_abnormal"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintTop_toBottomOf="@id/text1" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_31"
            android:text="@string/wwk_ask_doctor"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image" />


        <Button
            android:id="@+id/connect_next"
            android:layout_width="@dimen/dp_394"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@drawable/button_cancel"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/wwk_next1"
            android:textColor="#FAFCFF"
            android:textSize="@dimen/sp_19"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text3" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>