<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_all"
    android:orientation="vertical">

    <include layout="@layout/device_head" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_80"
        android:paddingBottom="@dimen/dp_50"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/topDataLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navigation_text">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/wwk_low_speed"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/wwk_gain"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/t1" />


                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:constraint_referenced_ids="t1, t2" />

                <TextView
                    android:id="@+id/result_disu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:text="25 mm/s"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/t1"
                    app:layout_constraintLeft_toRightOf="@+id/barrier1"
                    app:layout_constraintTop_toTopOf="@+id/t1" />

                <TextView
                    android:id="@+id/result_zengyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:text="10 mm/mV"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/t2"
                    app:layout_constraintLeft_toRightOf="@+id/barrier1"
                    app:layout_constraintTop_toTopOf="@+id/t2" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:constraint_referenced_ids="result_disu, result_zengyi" />


                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/wwk_frequency_filtering"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toRightOf="@+id/barrier2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/wwk_baseline_filtering"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toLeftOf="@+id/barrier2"
                    app:layout_constraintTop_toBottomOf="@+id/t3" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:constraint_referenced_ids="t3, t4" />


                <TextView
                    android:id="@+id/result_gongpin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:text="50Hz"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/t3"
                    app:layout_constraintLeft_toRightOf="@+id/barrier3"
                    app:layout_constraintTop_toTopOf="@+id/t3" />

                <TextView
                    android:id="@+id/result_jixian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:text="0.5Hz"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/t4"
                    app:layout_constraintLeft_toRightOf="@+id/barrier3"
                    app:layout_constraintTop_toTopOf="@+id/t4" />


                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:constraint_referenced_ids="result_gongpin, result_jixian" />


                <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/wwk_emg_filtering"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toRightOf="@+id/barrier4"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/t6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/wwk_low_pass_filtering"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toLeftOf="@+id/barrier4"
                    app:layout_constraintTop_toBottomOf="@+id/t5" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:constraint_referenced_ids="t5, t6" />


                <TextView
                    android:id="@+id/result_jidian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:text="25Hz"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/t5"
                    app:layout_constraintLeft_toRightOf="@+id/barrier5"
                    app:layout_constraintTop_toTopOf="@+id/t5" />

                <TextView
                    android:id="@+id/result_ditong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:text="25Hz"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/t6"
                    app:layout_constraintLeft_toRightOf="@+id/barrier5"
                    app:layout_constraintTop_toTopOf="@+id/t6" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:constraint_referenced_ids="result_jidian, result_ditong" />

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="87"
                    android:textColor="#F18937"
                    android:textSize="@dimen/sp_24"
                    app:layout_constraintBottom_toBottomOf="@+id/result_ditong"
                    app:layout_constraintLeft_toRightOf="@+id/barrier6"
                    app:layout_constraintTop_toTopOf="@+id/result_jidian" />


                <TextView
                    android:id="@+id/bpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="bpm"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBaseline_toBaselineOf="@+id/result"
                    app:layout_constraintLeft_toRightOf="@+id/result" />


                <TextView
                    android:id="@+id/result_miao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10S"
                    android:layout_marginStart="@dimen/dp_3"
                    android:textColor="#F18937"
                    android:textSize="@dimen/sp_24"
                    app:layout_constraintBottom_toBottomOf="@+id/celiangshichang"
                    app:layout_constraintLeft_toRightOf="@+id/celiangshichang"
                    app:layout_constraintTop_toTopOf="@+id/celiangshichang" />


                <TextView
                    android:id="@+id/celiangshichang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/wwk_test_left_time"
                    android:textColor="#7D7D7D"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintBottom_toBottomOf="@+id/result"
                    app:layout_constraintLeft_toRightOf="@+id/bpm"
                    app:layout_constraintTop_toTopOf="@+id/result" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>


        <SurfaceView
            android:id="@+id/surface"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topDataLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>