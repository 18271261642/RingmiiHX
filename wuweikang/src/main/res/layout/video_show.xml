<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_all"
    android:orientation="vertical">

    <include layout="@layout/head" />

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/myBodyLayout"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/m1000"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@mipmap/m500"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/navigation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@id/m1000"
            app:layout_constraintLeft_toRightOf="@id/m1000"
            app:layout_constraintTop_toTopOf="@+id/m1000" />


        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/m1000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_177"
            android:layout_marginTop="@dimen/dp_31"
            android:text="@string/wwk_guider_cgm"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/sp_18"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_view" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="video_view" />


        <TextView
            android:id="@+id/button_next"
            android:layout_width="@dimen/dp_124"
            android:layout_height="@dimen/dp_34"
            android:alpha="0.8"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/button_cancel"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/wwk_next1"
            android:textColor="#FAFCFF"
            android:textSize="@dimen/sp_19"
            app:layout_constraintRight_toRightOf="@+id/barrier"
            app:layout_constraintBottom_toBottomOf="@id/video_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>