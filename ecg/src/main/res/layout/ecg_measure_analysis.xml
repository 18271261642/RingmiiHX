<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/background_all"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/device_head" />

    <LinearLayout
        style="@style/myBodyLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_23"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_13"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/logon_guider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/ecg"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text=">"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/op_guide"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text=">"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/testing"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text=">"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/device_test"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text=">"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/test_result"
                android:textColor="#F18937"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        
        <ImageView
            android:layout_marginTop="@dimen/dp_59"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/analysis"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:textColor="#ACACAC"
            android:text="@string/analyzing_ecg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/later"
                android:textSize="@dimen/sp_19"
                android:id="@+id/analysis_cancel"
                android:background="@drawable/button_cancel"
                android:layout_width="@dimen/dp_129"
                android:layout_height="@dimen/dp_44" />

            <Button
                android:text="@string/ok"
                android:textSize="@dimen/sp_19"
                android:layout_marginLeft="@dimen/dp_27"
                android:id="@+id/analysis_go"
                android:background="@drawable/button_cancel"
                android:layout_width="@dimen/dp_129"
                android:layout_height="@dimen/dp_44" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>