<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_all"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/device_head" />


    <ScrollView
        style="@style/myBodyLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_59"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/logon_guider"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/glu"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/input_param"
                    android:textColor="#F18937"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/open_tips"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/bt_connect"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/device_test"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/test_result"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintHorizontal_chainStyle="spread">

                <LinearLayout
                    android:id="@+id/hhhh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread">

                    <TextView
                        android:id="@+id/h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/height"
                        android:textColor="#171717"
                        android:textSize="@dimen/sp_15" />

                    <EditText
                        android:id="@+id/height"
                        android:layout_width="@dimen/dp_132"
                        android:layout_height="@dimen/dp_35"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:background="@drawable/text_box"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="cm"
                        android:textColor="#171717"
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_i_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hhhh"
                    android:layout_marginTop="@dimen/dp_14"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/hhhh"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ll_i_3"
                    app:layout_constraintHorizontal_chainStyle="spread">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight"
                        android:textColor="#171717"
                        android:textSize="@dimen/sp_15" />

                    <EditText
                        android:id="@+id/weight"
                        android:layout_width="@dimen/dp_132"
                        android:layout_height="@dimen/dp_35"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:background="@drawable/text_box"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="kg"
                        android:textColor="#171717"
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_i_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_goneMarginLeft="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/hhhh"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                    <LinearLayout
                        android:id="@+id/right_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_8"
                            android:text="@string/glu_level"
                            android:textSize="@dimen/sp_15" />

                        <LinearLayout
                            android:id="@+id/green"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:background="@drawable/shape_left"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:stateListAnimator="@null">

                            <com.guider.health.common.views.RoundCheckBox
                                android:id="@+id/checkbox_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false" />

                            <TextView
                                android:id="@+id/glu_normal_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/normal"
                                android:textColor="@drawable/glu_textview_text_color"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/red"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginLeft="-1dp"
                            android:background="@drawable/shape_right"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10">

                            <com.guider.health.common.views.RoundCheckBox
                                android:id="@+id/checkbox_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false" />

                            <TextView
                                android:id="@+id/glu_abnormal_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/abnormal_glu"
                                android:textColor="@drawable/glu_textview_text_color"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout

                        android:id="@+id/not_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_7"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        app:layout_constraintLeft_toRightOf="@+id/hhhh"
                        app:layout_constraintTop_toBottomOf="@+id/right_1">


                        <TextView
                            android:id="@+id/text_foot_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/fpg_"
                            android:textSize="@dimen/sp_15" />

                        <EditText
                            android:id="@+id/input_glu_value"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_35"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:background="@drawable/text_box"
                            android:gravity="center"
                            android:inputType="number|numberDecimal"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_abnormal_input_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_9"
                            android:text="mmol/L"
                            android:textColor="#171717"
                            android:textSize="@dimen/sp_15" />


                    </LinearLayout>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/empty_food"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:background="@mipmap/time0" />

                        <TextView
                            android:id="@+id/empty_food_selected"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginTop="96dp"
                            android:background="@mipmap/selected"
                            android:visibility="gone"
                            app:layout_constraintCircle="@+id/empty_food"
                            app:layout_constraintCircleAngle="30"
                            app:layout_constraintCircleRadius="@dimen/dp_80" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fpg"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/time1_food"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:background="@mipmap/time3" />

                        <TextView
                            android:id="@+id/time1_food_selected"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:background="@mipmap/selected"
                            android:visibility="gone"
                            app:layout_constraintCircle="@+id/time1_food"
                            app:layout_constraintCircleAngle="30"
                            app:layout_constraintCircleRadius="@dimen/dp_80" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twohppg"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/time2_food"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:background="@mipmap/time2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twohppg_normal"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_70"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/time3_food"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:background="@mipmap/time3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twohppg_full"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <include
                    android:id="@+id/not_normal_page"
                    layout="@layout/eat_medicine_layout_v2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:visibility="visible" />

            </LinearLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="@dimen/dp_394"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/button_cancel"
                android:stateListAnimator="@null"
                android:text="@string/next_step"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>


