<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_all"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/device_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_80"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/logon_guider" />

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginLeft="@dimen/dp_8"-->
                <!--                    android:text="@string/glu"-->
                <!--                    android:textColor="#ACACAC"-->
                <!--                    android:textSize="@dimen/sp_15" />-->

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginLeft="@dimen/dp_8"-->
                <!--                    android:text=">"-->
                <!--                    android:textColor="#ACACAC"-->
                <!--                    android:textSize="@dimen/sp_14" />-->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/input_param"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/open_tips"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/bt_connect"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/device_test"
                    android:textColor="#F18937"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text=">"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/test_result"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20">

                <LinearLayout
                    android:id="@+id/glu_touch_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/glu_connect_icon"
                            android:layout_width="@dimen/dp_124"
                            android:layout_height="@dimen/dp_124"
                            android:background="@mipmap/pleas_in" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/into_finger"
                                    android:textColor="#171717"
                                    android:textSize="@dimen/sp_21"
                                    android:textStyle="bold" />

                                <FrameLayout
                                    android:layout_width="@dimen/dp_60"
                                    android:layout_height="@dimen/dp_60"
                                    android:layout_marginLeft="@dimen/dp_20">

                                    <com.guider.health.common.views.RoundProgress
                                        android:id="@+id/progress"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />

                                    <TextView
                                        android:id="@+id/progress_num"
                                        android:layout_width="@dimen/dp_46"
                                        android:layout_height="@dimen/dp_46"
                                        android:layout_gravity="center"
                                        android:background="@drawable/shape_num"
                                        android:gravity="center"
                                        android:text="10"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/sp_20" />
                                </FrameLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20"
                                android:text="@string/finish_in_time"
                                android:textColor="#ADACAC"
                                android:textSize="@dimen/sp_16" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/glu_test_tips"
                        android:textColor="#ADACAC"
                        android:textSize="@dimen/sp_21" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loadingroot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/loadinglayout"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/round_loading" />

                        <TextView
                            android:id="@+id/loading_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="60"
                            android:textColor="#7D7D7D"
                            android:textSize="@dimen/sp_19" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/tip_icon"
                            android:layout_width="@dimen/dp_124"
                            android:layout_height="@dimen/dp_124"
                            android:layout_marginRight="@dimen/dp_40"
                            android:background="@mipmap/normal" />

                        <TextView
                            android:id="@+id/promp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/initing_device"
                            android:textColor="#7D7D7D"
                            android:textSize="@dimen/sp_19"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/glu_cancel"
                        android:layout_width="@dimen/dp_394"
                        android:layout_height="@dimen/dp_44"
                        android:layout_marginTop="@dimen/dp_42"
                        android:background="@drawable/button_cancel"
                        android:text="@string/retry"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/dp_19"
                        android:visibility="gone" />

                </LinearLayout>

            </FrameLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>




