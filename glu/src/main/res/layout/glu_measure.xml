<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_all"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/head" />


    <LinearLayout
        style="@style/myBodyLayout"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_23"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_13"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/m500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="无创血糖"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text=">"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="参数输入"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text=">"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="开机提示"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text=">"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="蓝牙连接"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text=">"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="设备测量"
                android:textColor="#F18937"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text=">"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="测量结果"
                android:textColor="#ACACAC"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_74">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/glu_touch_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/glu_connect_icon"
                        android:layout_width="@dimen/dp_194"
                        android:layout_height="@dimen/dp_194"
                        android:background="@mipmap/pleas_in" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_53"
                        android:layout_marginTop="@dimen/dp_26"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="请伸入手指"
                                android:textColor="#171717"
                                android:textSize="@dimen/sp_21"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:layout_width="@dimen/dp_60"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_height="@dimen/dp_60">

                                <com.guider.health.common.views.RoundProgress
                                    android:id="@+id/progress"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/progress_num"
                                    android:layout_width="@dimen/dp_46"
                                    android:layout_height="@dimen/dp_46"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:background="@drawable/shape_num"
                                    android:textSize="@dimen/sp_20"
                                    android:text="10"/>
                            </FrameLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="请在规定时间内完成操作"
                            android:textColor="#ADACAC"
                            android:layout_marginTop="@dimen/dp_20"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建议的环境温度 20℃—27℃        合适的手指温度29℃—35℃"
                    android:textColor="#ADACAC"
                    android:textSize="@dimen/sp_21" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/loadingroot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/loadinglayout"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_10"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/round_loading" />

                    <TextView
                        android:id="@+id/loading_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="60"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp_19" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_23"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tip_icon"
                        android:layout_width="@dimen/dp_124"
                        android:layout_height="@dimen/dp_124"
                        android:layout_marginRight="@dimen/dp_40"
                        android:background="@mipmap/normal" />

                    <TextView
                        android:id="@+id/promp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正在初始化设备, 请勿伸入手指 !"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp_19"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:visibility="gone"
                    android:id="@+id/glu_cancel"
                    android:layout_width="@dimen/dp_394"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginTop="@dimen/dp_42"
                    android:background="@drawable/button_cancel"
                    android:text="已重启设备 , 重试"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dp_19" />

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

</LinearLayout>




