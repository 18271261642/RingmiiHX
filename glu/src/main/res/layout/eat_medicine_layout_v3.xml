<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF8F2"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text1"
        android:textSize="@dimen/sp_13"
        android:textColor="#171717"
        android:text="@string/not_take_med"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text2"
        android:textSize="@dimen/sp_13"
        android:textColor="#171717"
        android:text="@string/sulfonylureas"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/text3"
        android:textSize="@dimen/sp_13"
        android:textColor="#171717"
        android:text="@string/biguanide"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/text4"
        android:textSize="@dimen/sp_13"
        android:textColor="#171717"
        android:text="@string/liver_enzyme_inhibitor_drugs"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/toogle_1"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text1"
        app:layout_constraintLeft_toRightOf="@+id/barrier"/>

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/toogle_2"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text2"
        app:layout_constraintBottom_toBottomOf="@+id/text2"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/toogle_3"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text3"
        app:layout_constraintBottom_toBottomOf="@+id/text3"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        />


    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/toogle_4"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text4"
        app:layout_constraintBottom_toBottomOf="@+id/text4"
        />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="text1,text2,text3,text4" />

</android.support.constraint.ConstraintLayout>