<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/head" />

    <RelativeLayout
        android:id="@+id/glu_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_191"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        android:background="@mipmap/glu_result"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_26"
                android:text="2019-07-15 11:20"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/foot_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_26"
                android:text="@string/measure_3_canhou"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_13" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/glu_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/glu_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="128"
                android:textColor="#FF0000"
                android:textSize="@dimen/sp_63" />

            <ImageView
                android:id="@+id/glu_result_arrow"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_42"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/up" />
        </LinearLayout>

        <TextView
            android:id="@+id/glu_result_danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/glu_middle"
            android:layout_centerHorizontal="true"
            android:text="mmol/L" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14">

        <RelativeLayout
            android:layout_width="@dimen/dp_166"
            android:layout_height="@dimen/dp_104"
            android:layout_marginLeft="@dimen/dp_14"
            android:background="@mipmap/bg_green">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_26"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_19"
                android:background="@mipmap/icon1" />

            <LinearLayout
                android:id="@+id/image11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_56">

                <TextView
                    android:id="@+id/pulse_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:text="133" />

                <ImageView
                    android:id="@+id/pulse_result_arrow"
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/up" />
            </LinearLayout>

            <TextView
                android:id="@+id/pulse_result_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/result_1_maibo"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="127dp"
                android:layout_marginTop="209dp"
                android:background="@mipmap/barral" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/dp_166"
            android:layout_height="@dimen/dp_104"
            android:layout_marginLeft="@dimen/dp_14"
            android:background="@mipmap/bg_red"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_34"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@mipmap/icon2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_56">

                <TextView
                    android:id="@+id/hemoglobin_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:text="133" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_14"
                android:text="@string/result_1_xuehongdanbai"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 下面两个-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="@dimen/dp_166"
            android:layout_height="@dimen/dp_104"
            android:layout_marginLeft="@dimen/dp_14"
            android:background="@mipmap/bg_blue"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_29"
                android:layout_height="@dimen/dp_29"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_19"
                android:background="@mipmap/icon3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_56">

                <TextView
                    android:id="@+id/oxygen_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="133" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_14"
                android:text="@string/result_1_xueyangbaohe"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/dp_166"
            android:layout_height="@dimen/dp_104"
            android:layout_marginLeft="@dimen/dp_14"
            android:background="@mipmap/bg_orig"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_19"
                android:background="@mipmap/icon4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_56">

                <TextView
                    android:id="@+id/speed_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFEAC0"
                    android:text="133" />

                <ImageView
                    android:id="@+id/speed_result_arrow"
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/up" />

            </LinearLayout>

            <TextView
                android:id="@+id/speed_result_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_14"
                android:text="@string/result_1_xueliusudu"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
    </LinearLayout>


    <!-- 表格-->

    <RelativeLayout
        android:layout_width="@dimen/dp_347"
        android:layout_height="@dimen/dp_97"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_23"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/text1"
            android:layout_width="@dimen/dp_116"
            android:layout_height="@dimen/dp_34"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/form_left"
            android:gravity="center"
            android:text="@string/result_1_zhijian" />

        <TextView
            android:id="@id/text2"
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_34"
            android:layout_toRightOf="@id/text1"
            android:background="#F2F2F2"
            android:drawableBottom="@drawable/line"
            android:drawableTop="@drawable/line"
            android:gravity="center"
            android:text="@string/result_1_huanjing" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="@dimen/dp_116"
            android:layout_height="@dimen/dp_34"
            android:layout_toRightOf="@id/text2"
            android:background="@drawable/form_right"
            android:gravity="center"
            android:text="@string/result_1_dianchidianliang" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:layout_below="@id/text1"
            android:drawableBottom="@drawable/line"
            android:drawableLeft="@drawable/line_up"
            android:drawableRight="@drawable/line_up"
            android:gravity="center"
            android:text="@string/result_1_wendu" />


        <TextView
            android:id="@+id/text5"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_29"
            android:layout_below="@id/text4"
            android:drawableBottom="@drawable/line"
            android:drawableLeft="@drawable/line_up"
            android:drawableRight="@drawable/line_up"
            android:gravity="center"
            android:text="@string/result_1_shidu" />

        <TextView
            android:id="@+id/result1"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@id/text4"
            android:drawableBottom="@drawable/line"
            android:drawableRight="@drawable/line_up"
            android:gravity="center"
            android:text="36.7" />

        <TextView
            android:id="@+id/result2"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_29"
            android:layout_below="@id/text4"
            android:layout_toRightOf="@id/text5"
            android:drawableBottom="@drawable/line"
            android:drawableRight="@drawable/line_up"
            android:gravity="center"
            android:text="36.7" />


        <TextView
            android:id="@+id/text6"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@+id/result1"
            android:drawableBottom="@drawable/line"
            android:drawableRight="@drawable/line_up"
            android:gravity="center"
            android:text="@string/result_1_wendu" />


        <TextView
            android:id="@+id/text7"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_29"
            android:layout_below="@id/text4"
            android:layout_toRightOf="@id/result2"
            android:drawableBottom="@drawable/line"
            android:drawableRight="@drawable/line_up"
            android:gravity="center"
            android:text="@string/result_1_shidu" />

        <TextView
            android:id="@+id/result3"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@id/text6"
            android:drawableBottom="@drawable/line"
            android:drawableRight="@drawable/line_up"
            android:gravity="center"
            android:text="36.7" />

        <TextView
            android:id="@+id/result4"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_29"
            android:layout_below="@id/text4"
            android:layout_toRightOf="@id/text7"
            android:drawableBottom="@drawable/line"
            android:drawableRight="@drawable/line_up"
            android:gravity="center"
            android:text="36.7" />


        <RelativeLayout
            android:layout_below="@id/text3"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_116"
            android:layout_height="@dimen/dp_61">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@mipmap/barral"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_13" />

                <TextView
                    android:id="@+id/result5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="76%" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableBottom="@drawable/line"
                android:drawableRight="@drawable/line_up"
                android:gravity="center_horizontal" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>