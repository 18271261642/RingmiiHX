    <style name="activityAnimatStyle" parent="@android:style/Animation.Activity">

        <!-- 新Activity 进入 -->
        <item name="android:activityOpenEnterAnimation">@animator/glu_v_activity_enter</item>
        <!-- 旧Activity退出 -->
        <item name="android:activityOpenExitAnimation">@animator/glu_v_activity_exit</item>
        <!-- 新Activity退出 -->
        <item name="android:activityCloseExitAnimation">@animator/glu_v_activity_pop_exit</item>
        <!-- 旧Activity进入 -->
        <item name="android:activityCloseEnterAnimation">@animator/glu_v_activity_pop_enter</item>
