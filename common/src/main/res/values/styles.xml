<resources>

    <!--弹窗动画-->
    <style name="mystyle" parent="android:Animation">
        <!--//进入时的动画-->
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <!--&lt;!&ndash;//退出时的动画&ndash;&gt;-->
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>


    <style name="myHeadLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/dp_50</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:layout_marginBottom">@dimen/dp_15</item>
        <item name="android:layout_marginLeft">@dimen/dp_50</item>
        <item name="android:layout_marginRight">@dimen/dp_50</item>

        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="myBodyLayout">
        <item name="android:layout_width">match_parent</item>
        <!-- <item name="android:layout_height">@dimen/dp_394</item>
        <item name="android:layout_width">match_parent</item>-->
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_50</item>
        <item name="android:layout_marginRight">@dimen/dp_50</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/color_00000000</item>
    </style>
    <style name="dialogstyle" parent="android:Animation">
        <!-- 指定显示的动画xml  -->
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- 指定消失的动画xml  -->
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>
